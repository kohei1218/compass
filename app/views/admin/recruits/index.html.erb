<section class="content-header">
  <h1>求人一覧</h1>
</section>
<section class="content">
  <div class="row">
    <div class="col-xs-12">
      <div class="box box-primary">
        <div class="box-header">
          <h3 class="box-title"></h3>
          <div class="box-body table-responsive no-padding">
            <table class="table table-hover">
              <tr>
                <th>職種</th>
                <th>仕事内容</th>
                <th>対象となる方</th>
                <th>雇用形態</th>
                <th>給与・待遇</th>
                <th>福利厚生</th>
                <th>勤務時間</th>
                <th>休日・休暇</th>
                <th>勤務地</th>
                <th>障がいの配慮</th>
                <th>その他</th>
                <th>選考プロセス</th>
              </tr>
              <% @recruits.each do |recruit| %>
                  <tr>
                    <td><%= recruit.occupation %></td>
                    <td><%= recruit.description %></td>
                    <td><%= recruit.qualification %></td>
                    <td><%= recruit.employment_type %></td>
                    <td><%= recruit.salary %></td>
                    <td><%= recruit.welfare %></td>
                    <td><%= recruit.office_hours %></td>
                    <td><%= recruit.holiday %></td>
                    <td><%= recruit.location %></td>
                    <td><%= recruit.consideration %></td>
                    <td><%= recruit.information %></td>
                    <td><%= recruit.screening_process %></td>
                    <td><%= link_to "詳細", admin_recruit_path(recruit) %></td>
                  </tr>
              <% end %>
            </table>
            <%= paginate @recruits %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
